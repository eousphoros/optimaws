!!!
%html{lang: "en"}
  %head
    %meta{charset: "utf-8"}/
    %meta{content: "width=device-width, initial-scale=1", name: "viewport"}/
    %meta{content: "OptimAWS", name: "description"}/
    %meta{content: "Patrick Buckley", name: "author"}/
    %script{src: "//code.jquery.com/jquery-1.10.2.min.js"}
    %script{src: "//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"}
    %link{href: "//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css", rel: "stylesheet"}/
    %link{href: "/css/common.css", rel: "stylesheet"}/
    %link{href: "favicon.ico", rel: "shortcut icon"}/
    %title= @title 
  %body
    .navbar.navbar-inverse.navbar-fixed-top{role: "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{href: "/"}= @title
        .collapse.navbar-collapse
          %ul.nav.navbar-nav.navbar-right
            %li.dropdown.box-shadow.transition.border-radius
              %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                Graphs
                %b.caret
              %ul.dropdown-menu
                %li.dropdown-submenu
                  %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                    ap-southeast-1
                  %ul.dropdown-menu
                    %li
                      %a{href: '/apacsin'} ap-southeast-1
                %li
                  %a{href: '/apacsyd'} ap-southeast-2
                %li
                  %a{href: '/apactokyo'} ap-northeast-1
                %li
                  %a{href: '/euireland'} eu-west-1
                %li
                  %a{href: '/saeast1'} sa-east-1
                %li
                  %a{href: '/useast'} us-east-1
                %li
                  %a{href: '/uswest'} us-west-1
                %li
                  %a{href: '/uswest2'} us-west-2
            %li.dropdown.box-shadow.transition.border-radius
              %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                InDevelopment
                %b.caret
              %ul.dropdown-menu
                %li
                  %a.text-center{href: '/ec2costs'} Instance Costs JSON
                  %hr
                %li
                  %form{"accept-charset" => "UTF-8", action: "/playground", method: "post"}
                    %input#region.border-radius{name: "region", size: "25", type: "text", required: "required", placeholder: 'AWS Region'}/
                    %p{style: "padding:10px"}/
                    %input.btn.btn-default.border-radius.pull-right{name: "commit", type: "submit", value: "Search"}/
        / /.nav-collapse
    %ul.nav.nav-tabs
      %li.active
        %a{"data-toggle" => "tab", href: "/#{@loc}"}= @loc
    #content= yield
    %div.footer.pull-right
      %a{href: 'mailto:ptrck@blck.io'} ptrck@blck.io
